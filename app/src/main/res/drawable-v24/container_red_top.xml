<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/rippleDark">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/red" />
            <corners
                android:bottomLeftRadius="7dp"
                android:bottomRightRadius="7dp"
                android:topLeftRadius="@dimen/cont_corner_radius"
                android:topRightRadius="@dimen/cont_corner_radius" />
        </shape>
    </item>
    <item
        android:bottom="1dp"
        android:left="1dp"
        android:right="1dp"
        android:top="1dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/offStateColor4" />
            <corners
                android:bottomLeftRadius="7dp"
                android:bottomRightRadius="7dp"
                android:topLeftRadius="@dimen/cont_corner_radius"
                android:topRightRadius="@dimen/cont_corner_radius" />
        </shape>
    </item>
</ripple>