<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Iconify" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Background color. -->
        <item name="android:windowBackground">@color/colorBackground</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorPrimaryVariant">@color/colorAccent</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="colorSecondaryVariant">@color/colorAccent</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/colorBackground</item>
        <item name="android:windowLightStatusBar">false</item>
        <!-- Navigation bar color. -->
        <item name="android:navigationBarColor">@color/colorBackground</item>
        <item name="android:windowLightNavigationBar">false</item>
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/normal</item>
        <item name="fontFamily">@font/normal</item>
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <item name="android:textColorSecondary">@color/textColorSecondary</item>
        <item name="android:colorControlNormal">@color/textColorPrimary</item>
        <item name="android:colorControlActivated">@color/textColorPrimary</item>
        <item name="android:colorControlHighlight">@color/colorAccent</item>
        <item name="selectableItemBackground">?android:selectableItemBackground</item>
        <item name="selectableItemBackgroundBorderless">?android:selectableItemBackground</item>
    </style>
    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">32dp</item>
        <item name="android:letterSpacing">0.1</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="Toolbar.TitleText.Collapsed" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">20dp</item>
        <item name="android:letterSpacing">0.1</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="Toolbar.TitleText.Expanded" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">32dp</item>
        <item name="android:letterSpacing">0.1</item>
        <item name="android:textStyle">bold</item>
    </style>
    <color name="colorBackground">#FF000F1D</color>
    <color name="colorForeground">#FF0A1828</color>
    <color name="colorContainer">#FF0A1828</color>
    <color name="textColorPrimary">@color/white</color>
    <color name="textColorSecondary">#FF69788A</color>
    <color name="textColorSecondaryVariant">#BFFFFFFF</color>
    <color name="textColorSecondaryLight">#B3FFFFFF</color>
    <color name="colorSuccess">#FFB7F7C4</color>
    <color name="colorError">#FFFFB7B6</color>
    <color name="colorInfo">#FFB3E6F5</color>
    <color name="colorWarning">#FFFBE7C6</color>
</resources>