<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/volume_style_child"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/container_marginSide"
    android:layout_marginEnd="@dimen/container_marginSide"
    android:layout_marginBottom="@dimen/container_margin"
    android:background="@drawable/container"
    android:orientation="vertical"
    android:paddingStart="@dimen/container_paddingSide"
    android:paddingTop="@dimen/container_padding"
    android:paddingEnd="@dimen/container_paddingSide"
    android:paddingBottom="@dimen/container_padding">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        tools:ignore="UseCompoundDrawables">

        <TextView
            android:id="@+id/volume_style_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="@string/volume_style"
            android:textColor="@color/textColorPrimary"
            android:textSize="@dimen/cont_title_size"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/volume_style_info"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginTop="2dp"
            android:background="@drawable/ic_info"
            android:contentDescription="@string/icon"
            app:tint="@color/textColorPrimary" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:justificationMode="inter_word"
        android:text="@string/volume_module_desc"
        android:textColor="@color/textColorSecondary"
        android:textSize="@dimen/cont_desc_size" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioGroup
            android:id="@+id/volume_style1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.0">

            <RadioButton
                android:id="@+id/gradient_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:paddingStart="6dp"
                android:paddingEnd="6dp"
                android:text="@string/volume_style_gradient"
                android:textColor="@color/textColorPrimary"
                android:textSize="@dimen/cont_desc_size" />

            <RadioButton
                android:id="@+id/doublelayer_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:paddingStart="6dp"
                android:paddingEnd="6dp"
                android:text="@string/volume_style_doublelayer"
                android:textColor="@color/textColorPrimary"
                android:textSize="@dimen/cont_desc_size" />

            <RadioButton
                android:id="@+id/shadedlayer_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:paddingStart="6dp"
                android:paddingEnd="6dp"
                android:text="@string/volume_style_shadedlayer"
                android:textColor="@color/textColorPrimary"
                android:textSize="@dimen/cont_desc_size" />

        </RadioGroup>

        <RadioGroup
            android:id="@+id/volume_style2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.0">

            <RadioButton
                android:id="@+id/neumorph_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:paddingStart="6dp"
                android:paddingEnd="6dp"
                android:text="@string/volume_style_neumorph"
                android:textColor="@color/textColorPrimary"
                android:textSize="@dimen/cont_desc_size" />

            <RadioButton
                android:id="@+id/outline_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:paddingStart="6dp"
                android:paddingEnd="6dp"
                android:text="@string/volume_style_outline"
                android:textColor="@color/textColorPrimary"
                android:textSize="@dimen/cont_desc_size" />

            <RadioButton
                android:id="@+id/neumorphoutline_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:onClick="enableColors"
                android:paddingStart="6dp"
                android:paddingEnd="6dp"
                android:text="@string/volume_style_neumorphoutline"
                android:textColor="@color/textColorPrimary"
                android:textSize="@dimen/cont_desc_size" />

        </RadioGroup>
    </LinearLayout>

    <Button
        android:id="@+id/volume_style_create_module"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/container_padding"
        android:background="@drawable/button"
        android:fontFamily="@font/regular"
        android:letterSpacing="0.2"
        android:stateListAnimator="@null"
        android:text="@string/btn_create_module"
        android:textColor="@color/colorBackground"
        android:textSize="@dimen/cont_title_size"
        android:textStyle="bold"
        app:backgroundTint="@null" />

</LinearLayout>