<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        style="@style/TextAppearance.Material3.TitleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/container_paddingSide"
        android:layout_marginTop="@dimen/container_marginSide"
        android:layout_marginBottom="@dimen/container_marginSide"
        android:text="@string/list_title_miscellaneous_settings"
        android:textColor="@color/text_color_primary" />

    <LinearLayout
        android:id="@+id/clear_cache"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/container_top"
        android:orientation="vertical"
        android:paddingStart="@dimen/container_paddingSide"
        android:paddingTop="@dimen/container_padding"
        android:paddingEnd="@dimen/container_paddingSide"
        android:paddingBottom="@dimen/container_padding">

        <TextView
            style="@style/TextAppearance.Material3.TitleMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/clear_app_cache_title"
            android:textColor="@color/text_color_primary" />

        <TextView
            style="@style/TextAppearance.Material3.BodyMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/clear_app_cache_desc"
            android:textColor="@color/text_color_secondary" />

    </LinearLayout>

    <View style="@style/dividerTransparent" />

    <LinearLayout
        android:id="@+id/button_restartSysui"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/container_mid"
        android:orientation="vertical"
        android:paddingStart="@dimen/container_paddingSide"
        android:paddingTop="@dimen/container_padding"
        android:paddingEnd="@dimen/container_paddingSide"
        android:paddingBottom="@dimen/container_padding">

        <TextView
            style="@style/TextAppearance.Material3.TitleMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/restart_sysui_title"
            android:textColor="@color/text_color_primary" />

        <TextView
            style="@style/TextAppearance.Material3.BodyMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/restart_sysui_desc"
            android:textColor="@color/text_color_secondary" />

    </LinearLayout>

    <View style="@style/dividerTransparent" />

    <LinearLayout
        android:id="@+id/button_disableEverything"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/container_margin"
        android:background="@drawable/container_red_bottom"
        android:orientation="vertical"
        android:paddingStart="@dimen/container_paddingSide"
        android:paddingTop="@dimen/container_padding"
        android:paddingEnd="@dimen/container_paddingSide"
        android:paddingBottom="@dimen/container_padding">

        <TextView
            style="@style/TextAppearance.Material3.TitleMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/disable_everything_title"
            android:textColor="@color/text_color_primary" />

        <TextView
            style="@style/TextAppearance.Material3.BodyMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/disable_everything_desc"
            android:textColor="@color/text_color_secondary" />

    </LinearLayout>
</LinearLayout>