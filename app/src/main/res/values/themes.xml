<resources>
    <!-- Base application theme. -->
    <style name="Theme.Iconify" parent="Theme.Material3.Light.NoActionBar">
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>

        <!-- Navigation bar color. -->
        <item name="android:navigationBarColor">@color/transparent</item>
        <item name="android:windowLightNavigationBar">true</item>

        <!-- App theme. -->
        <item name="android:actionOverflowButtonStyle">@style/actionButtonOverflow</item>
        <item name="homeAsUpIndicator">@drawable/ic_home_as_up_indicator</item>
        <item name="android:lineSpacingMultiplier">1.4</item>
    </style>

    <style name="Theme.Iconify.SplashScreen" parent="Theme.SplashScreen">
        <item name="android:windowSplashScreenBackground">@color/colorBackground</item>
        <item name="android:windowSplashScreenAnimatedIcon">@mipmap/ic_launcher_round</item>
        <item name="android:windowSplashScreenIconBackgroundColor">@color/splash_logo</item>
        <item name="android:windowSplashScreenBrandingImage">@drawable/ic_branding</item>
        <item name="postSplashScreenTheme">@style/Theme.Iconify</item>
    </style>
</resources>