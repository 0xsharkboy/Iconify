<?xml version="1.0" encoding="utf-8" ?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="?android:colorControlHighlight">
    <item>
        <shape>
            <solid android:color="#00000000" />
        </shape>
    </item>
    <item
        android:top="2dp"
        android:bottom="2dp"
        android:start="44dp"
        android:end="44dp">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="@*android:color/holo_blue_light"
                android:endColor="@*android:color/holo_green_light"
                android:angle="315.0" />
            <corners android:radius="@*android:dimen/harmful_app_name_padding_top" />
        </shape>
    </item>
    <item
        android:top="4dp"
        android:bottom="4dp"
        android:start="44dp"
        android:end="44dp">
        <shape android:shape="rectangle">
            <solid android:color="@*android:color/system_neutral2_50" />
            <corners android:radius="@*android:dimen/harmful_app_name_padding_right" />
        </shape>
    </item>
    <item
        android:top="6dp"
        android:bottom="6dp"
        android:start="6dp"
        android:end="6dp">
        <shape android:shape="rectangle">
            <solid android:color="@*android:color/system_neutral2_50" />
            <corners android:radius="@*android:dimen/harmful_app_name_padding_top" />
        </shape>
    </item>
</ripple>
