<?xml version="1.0" encoding="utf-8" ?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:bottom="2dp"
        android:top="2dp">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="@*android:color/holo_blue_light"
                android:endColor="@*android:color/holo_green_light"
                android:angle="315.0" />
            <corners android:radius="@*android:dimen/harmful_app_name_padding_top" />
        </shape>
    </item>
    <item
        android:start="2dp"
        android:end="2dp"
        android:bottom="4dp"
        android:top="4dp">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#99FFFFFF"
                android:endColor="#B3FFFFFF" />
            <corners android:radius="@*android:dimen/harmful_app_name_padding_right" />
            <padding
                android:left="20dp"
                android:right="20dp" />
        </shape>
    </item>
</layer-list>
